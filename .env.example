# Agentic Chatbot Environment Configuration
# Copy this file to .env and fill in your API keys

# LLM API Keys
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
OPENAI_API_KEY=sk-xxxxx
OPENROUTER_API_KEY=sk-or-xxxxx
TAVILY_API_KEY=tvly-xxxxx

# Database Configuration
# For PostgreSQL (default):
DATABASE_URL=postgresql://user:pass@localhost:5432/chatbot

# For SQLite (uncomment and leave DATABASE_URL empty):
# DATABASE_URL=

# PostgreSQL Connection Details (used when DATABASE_URL is not set)
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=chatbot
POSTGRES_PORT=5432

# Application Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Logging
LOG_LEVEL=info  # debug, info, warning, error

# CORS
CORS_ORIGINS=http://localhost:3000

# Frontend API URL (for production nginx)
VITE_API_URL=http://localhost:8000
